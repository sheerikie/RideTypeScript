{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
  },
  "include": [
      "server.ts",
      "src/**/*.ts",
      // here you can include another directories with sources
  ],
  "exclude": [
      "node_modules"
  ]
}